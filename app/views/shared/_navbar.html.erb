<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>
                <li class="nav-item dropdown">
                    <%= cl_image_tag user_avatar(current_user), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
                        <%= link_to "Messages", "#", class: "dropdown-item" %>
                        <%= link_to "My Teams", "#", class: "dropdown-item" %>
                        <%= link_to "Forum", "#", class: "dropdown-item" %>
                        <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                            <i class="fas fa-sign-out-alt" id="logout-button"></i>
                        <% end %>
                    </div>
                </li>
            <% else %>
                <li class="nav-item">
                    <%= link_to "Login", new_user_session_path, {remote: true, 'data-toggle': 'modal', 'data-target': '#modal-window', class: "nav-link"} %>
                </li>
            <% end %>
        </ul>
    </div>
</div>
